  "description": "Backend for a Social Web App",
  "main": "app.js",
  "scripts": {
    "test": "tsc && jest --detectOpenHandles --runInBand --forceExit",
    "testCoverage": "tsc && jest --detectOpenHandles --runInBand --coverage",
    "start": "tsc && node ./dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only ./src/server.ts",
    "prod": "cp .envprod .env && tsc -p tsconfig_prod.json && pm2 restart ecosystem.config.js --env production",
